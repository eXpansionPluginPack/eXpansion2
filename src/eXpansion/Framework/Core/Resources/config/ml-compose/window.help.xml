<?xml version="1.0"?>
<block id="window.exp.core.help" extends="base.window" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="/src/eXpansion/Framework/MlComposeBundle/Resources/config/page-compose.xsd">

     <block component="Frame" id="window.exp.core.help.content" alias="content">

         <block component="Label" id="window.exp.core.help.content.text_text">
             <argument name="text">CONTENT</argument>
         </block>

          <!--TODO this won't work as we don't yet have the base grid element. But an idea on how to define one !!-->
        <block extends="base.grid" id="window.exp.core.help.grid">
            <argument name="width" xsi:type="expr">factory.getWidth()-2</argument>
            <argument name="height" xsi:type="expr">factory.getHeight()-2</argument>
            <argument name="x">1</argument>
            <argument name="y">-1</argument>

            <argument name="data-source" xsi:type="service">@MySuperService</argument>
            <argument name="layout">table</argument>

            <!-- List the columns, columns blocks needs aliases prefixed by "column_" this is not necessary for layout "grid" -->
            <block extends="base.grid.column.text" id="window.exp.core.help.grid.column_command" alias="column_command">
                <argument name="key">command</argument>
                <argument name="title">expansion_core.windows.chat_commands.column_command</argument>
                <argument name="width">25</argument>
            </block>
            <block extends="base.grid.column.text" id="window.exp.core.help.grid.column_description" alias="column_description">
                <argument name="key">description</argument>
                <argument name="title">expansion_core.windows.chat_commands.column_description</argument>
                <argument name="width">70</argument>
            </block>
            <block extends="base.grid.column.action" id="window.exp.core.help.grid.column_help" alias="column_help">
                <argument name="title"></argument>
                <argument name="width">10</argument>

                <argument name="service" xsi:type="service">@MySuperService</argument>
                <argument name="method" xsi:type="service">showExtendedHelp</argument>

                <block extends="Label" id="window.exp.core.help.grid.column_help.label">
                    <argument name="text">î¤–</argument>
                    <argument name="width">4</argument>
                    <argument name="height">4</argument>
                    <argument name="areaColor">0000</argument>
                    <argument name="areaFocusColor">000a</argument>
                </block>
            </block>
        </block>
    </block>
</block>
